{{#if addNewPost}}
  <h2>New Post</h2>
  <div>
    <form>
      <div class="form-group">
        <label for="pseudonym">Screen Name</label>
        {{input value=pseudonym id="pseudonym"}}
      </div>
      <div class="form-group">
        <label for="topic">Topic</label>
        {{input value=topic id="topic"}}
      </div>
      <div class="form-group">
        <label for="category">Category</label>
        {{input value=category id="category" placeholder=rental.category}}
      </div>
      <div class="form-group">
        <label for="body">Post Body</label>
        {{input value=body id="body"}}
      </div>
      <div class="form-group">
        <label for="image">Image url</label>
        {{input value=image id="image"}}
      </div>
      <button{{action 'save'}}> POST </button>
    </form>
  </div>
{{else}}
  <button {{action 'postFormShow'}}>New Post</button>
{{/if}}
